<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="breeze.js">
            <arguments>
                <argument name="bundles" xsi:type="array">
                    <item name="dynamic" xsi:type="array">
                        <item name="items" xsi:type="array">
                            <item name="SCP_all_option_clickable" xsi:type="array">
                                <item name="path" xsi:type="string">Mageants_SimpleConfigurable/js/all-option-clickable</item>

                                <item name="enabled" xsi:type="helper" helper="Swissup\Breeze\Helper\Config::isEnabled">
                                    <param name="path">simpleconfigurable_config/simpleconfigurable_settings/enable</param>
                                </item>
                            </item>
                        </item>
                    </item>

                    <item name="product-configurable" xsi:type="array">
                        <item name="items" xsi:type="array">
                            <item name="configurable" xsi:type="array">
                                <item name="path" xsi:type="string">Swissup_BreezeMageantsSimpleconfigurable/js/configurable</item>

                                <item name="export" xsi:type="array">
                                    <item name="configurable-export" xsi:type="string">Magento_ConfigurableProduct/js/configurable</item>
                                </item>

                                <item name="enabled" xsi:type="helper" helper="Swissup\Breeze\Helper\Config::isEnabled">
                                    <param name="path">simpleconfigurable_config/simpleconfigurable_settings/enable</param>
                                </item>
                            </item>

                            <item name="Magento_Swatches/js/swatch-renderer" xsi:type="array">
                                <item name="path" xsi:type="string">Swissup_BreezeMageantsSimpleconfigurable/js/swatch-renderer</item>

                                <item name="enabled" xsi:type="helper" helper="Swissup\Breeze\Helper\Config::isEnabled">
                                    <param name="path">simpleconfigurable_config/simpleconfigurable_settings/enable</param>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
